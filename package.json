{
  "name": "minga-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "env-cmd ./config/prod.env node dist/index.js ",
    "heroku-postbuild": "yarn tsc -d && babel build --out-dir dist --copy-files",
    "dev": "env-cmd ./config/dev.env nodemon -x ts-node src/index.ts --exec babel-node --extensions \".ts,.tsx,\"",
    "deploy-prisma-dev": "prisma deploy -e config/dev.env && graphql get-schema -p prisma --dotenv config/dev.env",
    "deploy-prisma-dev:seed": "prisma reset -e config/dev.env -f && prisma deploy -e config/dev.env && graphql get-schema -p prisma --dotenv config/dev.env && prisma seed -e config/dev.env",
    "seed": "prisma seed --reset -e config/dev.env",
    "deploy-prisma-prod": "prisma reset -e config/prod.env -f && prisma deploy -e config/prod.env && graphql get-schema -p prisma --dotenv config/prod.env && prisma seed -e config/prod.env",
    "test": "env-cmd ./config/test.env jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn run type-check -- --watch",
    "build": "yarn run build:types && yarn run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:types-prod": "tsc",
    "build:js": "env-cmd ./config/dev.env babel-node src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
  },
  "jest": {
    "globalSetup": "./tests/jest/globalSetup.js",
    "globalTeardown": "./tests/jest/globalTeardown.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@nuxtjs/auth": "^4.6.3",
    "@nuxtjs/axios": "^5.5.3",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "apollo-boost": "^0.3.1",
    "apollo-server-core": "^2.6.1",
    "bcryptjs": "^2.4.3",
    "cookieparser": "^0.1.0",
    "cross-fetch": "^3.0.2",
    "dotenv": "^8.0.0",
    "env-cmd": "^8.0.2",
    "graphql": "^14.2.1",
    "graphql-cli": "^3.0.11",
    "graphql-import": "^0.7.1",
    "graphql-shield": "^5.3.5",
    "graphql-yoga": "^1.17.4",
    "js-cookie": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.2.1",
    "prisma": "^1.32.0",
    "prisma-binding": "^2.3.10",
    "require": "^2.4.20",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/aws-lambda": "^8.10.26",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.2",
    "jest": "^23.5.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
